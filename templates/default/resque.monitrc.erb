<% @worker_count.times do |i| %>
<% identifier = "#{@application}_#{i + 1}" %>
<% pidfile = "#{@deploy[:deploy_to]}/shared/pids/resque.#{identifier}.pid" %>
check process resque_worker_<%= identifier %>
  with pidfile <%= pidfile %>
  start program = "/bin/su - <%= @deploy[:user] %> -c 'cd <%= @deploy[:current_path] %>; bundle exec rake environment resque:work RAILS_ENV=<%= @deploy[:rails_env] %> QUEUE=<%= @queue %> PIDFILE=<%= pidfile %> DISABLE_DOMAIN=true >> log/resque_worker_<%= identifier %>.log 2>&1'"
  stop program = "/bin/su - <%= @deploy[:user] %> -c 'cd <%= @deploy[:current_path] %> && kill -9 $(cat <%= pidfile %>) && rm -f <%= pidfile %>; exit 0;'"
  if totalmem is greater than 400 MB for 10 cycles then restart  # eating up memory?
  group resque_<%= @application %>_group

<% end %>
